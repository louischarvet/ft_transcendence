{
  "name": "frontend-app",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build:ts": "tsc",
    "build:css": "tailwindcss -i ./src/style.css -o ./dist/style.css --minify",
    "copy:static": "cp index.html dist/ && cp -r public/* dist/",
    "build": "npm run build:ts && npm run build:css && npm run copy:static",
    "start": "npm run build && node server.js"
  },
  "devDependencies": {
    "@babylonjs/core": "^8.22.0",
    "@babylonjs/gui": "^8.22.0",
    "@babylonjs/loaders": "^8.22.0",
    "@types/victor": "^1.1.5",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.8.3",
    "victor": "^1.1.0"
  }
}
